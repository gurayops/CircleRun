<UserCursor@Widget>:
	startLocation: 0
	direction: 0
	id: cursorRoot
	canvas.after:
		Color:
			rgb: 0, 0, 0
		Line:
			width: 5
			circle: (self.center_x, self.center_y, cursorRoot.width*0.5, self.startLocation, self.startLocation+7)
	Button:
		background_normal: ''
		background_down: ''
		# print root.center, root.pos, root.size, "==", cursorRoot.center, cursorRoot.pos, cursorRoot.size; 
		on_press: root.parent.parent.startMove()	
		Image:
			source: 'images/direction.png'


<ImageButton@ButtonBehavior+Image>
    source: 'images/button_pressed.png'
    #size_hint: .5, .5

<GameWindow>:
	# Main background
	canvas.before:
		Color:
			rgba: (95/255.0, 171/255.0, 255/255.0, 1)
		Rectangle:
			size: (self.width, self.height)

	# Level and Score Info - LEFT MENU
	level: 1
	score: 0
	BoxLayout:
		size_hint_x: 0.3
		orientation: 'vertical'
		Widget:
			size_hint_y: .35
		Label:
			size_hint_y: .3
			text: str(root.level)
			font_size: "80sp"
			bold: True
		Label:
			size_hint_y: .3
			text: str(root.score)
			font_size: "50sp"
			bold: True
		Widget:
			size_hint_y: .35

	# Main Scene - MIDDLE PART
	RelativeLayout:
		id: circler_background
		#size: root.width, root.height
		#pos: root.pos
		size_hint_x: 0.5
		#canvas.before:
		#	Rectangle:
		#		pos: self.pos
		#		size: self.size
		Widget:
			size_hint: (1, 1)
			pos_hint: {'center_x': 0.5, 'center_y': 0.5}
			canvas.before:
				Color:
					rgba: (1, 1, 1, 1)
				Line:
					dash_offset: 5
					dash_length: 5
					circle: (self.center_x, self.center_y, min(self.height, self.width)*0.5)

		UserCursor:
			id: gamer
			size_hint: (1, 1)
			#pos_hint: {'x': 0, 'y': 0}
			pos_hint: {'center_x': 0.5, 'center_y': 0.5}


	BoxLayout:
		size_hint_x: .2
		orientation: 'vertical'
		Widget:
			size_hint_y: .3
		Widget:
			size_hint_y: .3
		Button:
			size_hint_y: .4
			#size_hint_x: .5
			background_down: 'images/button_notPressed.png'
			background_normal: 'images/button_pressed.png'
			allow_stretch: False
			on_press: root.startMove()


			# print root.center, root.pos, root.size, "==", cursorRoot.center, cursorRoot.pos, cursorRoot.size; 
				
